<resources>

    <!-- Font: dùng sans-serif mặc định; nếu có font tuỳ chỉnh, thêm /res/font và thay thế fontFamily -->
    <style name="AppText.Title">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="AppText.Subtitle">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="AppText.PageIndicator">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppButton.Primary" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/button_background_green</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AppButton.Secondary" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/button_background_white</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AppInput.EditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorHintText</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
