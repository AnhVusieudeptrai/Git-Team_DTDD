<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Bo tròn các góc -->
    <corners android:radius="20dp" />

    <!-- Màu nền -->
    <solid android:color="#F5F5F5" />

    <!-- Viền (tùy chọn) -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Padding bên trong -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />

</shape>