<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/leaf"
            android:contentDescription="Logo"
            android:layout_marginBottom="12dp"/>

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tham gia"
            android:textColor="#388E3C"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECOTRACK"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="16dp"/>

        <!-- Mô tả -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theo dõi thói quen sống xanh,\nkiến tạo tương lai bền vững."
            android:textColor="#1565C0"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Nút Google -->
        <LinearLayout
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/btn_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/gg"
                android:contentDescription="Google Icon"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập Google"
                android:textSize="14sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Nút Facebook -->
        <LinearLayout
            android:id="@+id/btnFacebook"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/btn_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/fb"
                android:contentDescription="Facebook Icon"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập Facebook"
                android:textSize="14sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- HOẶC -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOẶC"
            android:textColor="#888888"
            android:layout_marginBottom="12dp"/>

        <!-- Email -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:background="@drawable/btn_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="12dp"/>

        <!-- Mật khẩu -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:background="@drawable/btn_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Button bắt đầu -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Bắt đầu ngay"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_green"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Link dưới -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản? Đăng ký ngay\nQuên mật khẩu?"
            android:textColor="#1565C0"
            android:textSize="14sp"
            android:gravity="center"/>

    </LinearLayout>

</ScrollView>

