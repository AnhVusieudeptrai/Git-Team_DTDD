<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.onboarding.OnboardingScreen3Activity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_logo_ecotrack"
        android:contentDescription="@string/join_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Tham gia ECOTRACK -->
    <TextView
        android:id="@+id/tvJoinTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_title"
        android:textColor="@color/colorPrimaryGreenDark"
        android:textStyle="bold"
        android:textSize="22sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- Ảnh minh hoạ -->
    <ImageView
        android:id="@+id/ivFamily"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/family_recycling"
        android:scaleType="fitCenter"
        android:contentDescription="@string/connect_subtitle"
        app:layout_constraintTop_toBottomOf="@id/tvJoinTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:0.65"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"/>

    <!-- Kết nối và truyền cảm hứng (xanh đậm) -->
    <TextView
        android:id="@+id/tvConnectTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/connect_subtitle"
        android:textColor="@color/colorPrimaryGreenDark"
        android:textStyle="bold"
        android:textSize="26sp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ivFamily"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="6dp"/>

    <!-- Mô tả -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/share_text"
        android:textColor="@color/colorTextSecondary"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvConnectTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="4dp"/>

    <!-- HÀNG SOCIAL 1: Google | Facebook -->
    <LinearLayout
        android:id="@+id/rowSocialTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp">

        <!-- Google -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/button_chip_neutral"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginEnd="8dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_google"
                android:contentDescription="@string/login_with_google"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_with_google"
                android:textColor="@color/colorTextPrimary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <!-- Facebook -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/button_chip_neutral"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginStart="8dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_facebook"
                android:contentDescription="@string/login_with_facebook"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_with_facebook"
                android:textColor="@color/colorTextPrimary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- HÀNG SOCIAL 2: Ecotrack | Apple -->
    <LinearLayout
        android:id="@+id/rowSocialBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/rowSocialTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp">

        <!-- Ecotrack -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/button_chip_neutral"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginEnd="8dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_logo_ecotrack"
                android:contentDescription="@string/login_with_ecotrack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_with_ecotrack"
                android:textColor="@color/colorTextPrimary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <!-- Apple -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/button_chip_neutral"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginStart="8dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_apple"
                android:contentDescription="@string/login_with_apple"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_with_apple"
                android:textColor="@color/colorTextPrimary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider HOẶC -->
    <LinearLayout
        android:id="@+id/llOr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/rowSocialBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/colorInputBorder"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:textColor="@color/colorTextSecondary"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/colorInputBorder"/>
    </LinearLayout>

    <!-- Email + Mật khẩu song song -->
    <LinearLayout
        android:id="@+id/llInputs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/llOr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp">

        <EditText
            android:id="@+id/etEmail"
            style="@style/AppInput.EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etPassword"
            style="@style/AppInput.EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Bắt đầu ngay -->
    <Button
        android:id="@+id/btnStartNow"
        style="@style/AppButton.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button_background_green"
        android:text="@string/start_now"
        android:textColorLink="#A65E5E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llInputs" />

    <!-- Footer -->
    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_account"
        android:textColor="@color/colorTextSecondary"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/btnStartNow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="18dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
