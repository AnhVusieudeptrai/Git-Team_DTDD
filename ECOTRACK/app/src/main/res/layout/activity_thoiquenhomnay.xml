<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/profile_image_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_n" />

    <!-- User Name -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Ban"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <!-- User Level -->
    <TextView
        android:id="@+id/tvUserLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Cấp độ 5"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

    <!-- Points Label -->
    <TextView
        android:id="@+id/tvPointsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Điểm:"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/tvPoints"
        app:layout_constraintTop_toTopOf="@+id/tvUserName" />

    <!-- Points Value -->
    <TextView
        android:id="@+id/tvPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="1250 / 2000"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvUserName" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:max="2000"
        android:progress="1250"
        android:progressTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="@+id/tvPoints"
        app:layout_constraintStart_toStartOf="@+id/tvPointsLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvPoints" />

    <!-- Streak Card Background -->
    <View
        android:id="@+id/streakCardBg"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/streak_card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <!-- Leaf Icon Placeholder -->
    <ImageView
        android:id="@+id/leafIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/_fbf3a1d_b7b1_4f84_ba83_994625e842f8"
        app:layout_constraintBottom_toBottomOf="@+id/streakCardBg"
        app:layout_constraintStart_toStartOf="@+id/streakCardBg"
        app:layout_constraintTop_toTopOf="@+id/streakCardBg" />

    <!-- Streak Text -->
    <TextView
        android:id="@+id/tvStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Streak: 7 ngày sống xanh"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/streakCardBg"
        app:layout_constraintStart_toEndOf="@+id/leafIcon"
        app:layout_constraintTop_toTopOf="@+id/streakCardBg" />

    <!-- CO2 Card -->
    <View
        android:id="@+id/co2CardBg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/co2_card_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streakCardBg" />

    <!-- CO2 Icon -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/co2CardBg"
        app:layout_constraintStart_toStartOf="@+id/co2CardBg"
        app:layout_constraintTop_toTopOf="@+id/co2CardBg"
        app:srcCompat="@drawable/_11721_cloud_icon" />

    <TextView
        android:id="@+id/co2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="CO2 giảm:"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/co2CardBg"
        app:layout_constraintStart_toStartOf="@+id/co2CardBg"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/co2Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="5 kg"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/co2CardBg"
        app:layout_constraintStart_toStartOf="@+id/co2CardBg"
        app:layout_constraintTop_toBottomOf="@+id/co2Label" />

    <!-- Plastic Card -->

    <!-- Plastic Icon -->

    <View
        android:id="@+id/plasticCardBg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/plastic_card_bg"
        app:layout_constraintStart_toEndOf="@+id/co2CardBg"
        app:layout_constraintTop_toBottomOf="@+id/streakCardBg" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/plasticCardBg"
        app:layout_constraintStart_toStartOf="@+id/plasticCardBg"
        app:layout_constraintTop_toTopOf="@+id/plasticCardBg"
        app:srcCompat="@drawable/_454719_earth_eco_ecology_greenpeace_no_plastic_bottle_icon" />

    <TextView
        android:id="@+id/plasticLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nhựa tiết kiệm:"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/plasticCardBg"
        app:layout_constraintStart_toStartOf="@+id/plasticCardBg"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <TextView
        android:id="@+id/plasticValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="15 món"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/plasticCardBg"
        app:layout_constraintStart_toStartOf="@+id/plasticCardBg"
        app:layout_constraintTop_toBottomOf="@+id/plasticLabel" />

    <!-- Water Card -->
    <View
        android:id="@+id/waterCardBg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/water_card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plasticCardBg"
        app:layout_constraintTop_toBottomOf="@+id/streakCardBg" />

    <!-- Water Icon -->
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/waterCardBg"
        app:layout_constraintStart_toStartOf="@+id/waterCardBg"
        app:layout_constraintTop_toTopOf="@+id/waterCardBg"
        app:srcCompat="@drawable/water" />

    <TextView
        android:id="@+id/waterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nước tiết kiệm:"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/waterCardBg"
        app:layout_constraintStart_toStartOf="@+id/waterCardBg"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <TextView
        android:id="@+id/waterValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="30 lít"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/waterCardBg"
        app:layout_constraintStart_toStartOf="@+id/waterCardBg"
        app:layout_constraintTop_toBottomOf="@+id/waterLabel" />

    <!-- Chart Placeholder -->
    <View
        android:id="@+id/chartView"
        android:layout_width="383dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/kkakaka"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/co2CardBg" />

    <!-- Today's Habits Title -->
    <TextView
        android:id="@+id/tvHabitsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Thói quen hôm nay"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chartView" />

    <!-- Habit 1 Card -->
    <View
        android:id="@+id/habit1CardBg"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/habit_card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHabitsTitle" />

    <ImageView
        android:id="@+id/cbHabit1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/_99110_check_sign_icon"

        app:layout_constraintBottom_toBottomOf="@+id/habit1CardBg"
        app:layout_constraintStart_toStartOf="@+id/habit1CardBg"
        app:layout_constraintTop_toTopOf="@+id/habit1CardBg" />

    <TextView
        android:id="@+id/habit1Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="Tắm nhanh hơn 5 phút"
        android:textColor="#666666"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/habit1CardBg"
        app:layout_constraintEnd_toStartOf="@+id/habit1ExpBadge"
        app:layout_constraintStart_toEndOf="@+id/cbHabit1"
        app:layout_constraintTop_toTopOf="@+id/habit1CardBg" />

    <TextView
        android:id="@+id/habit1ExpBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/exp_badge_bg"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="+10 EXP"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/habit1CardBg"
        app:layout_constraintEnd_toEndOf="@+id/habit1CardBg"
        app:layout_constraintTop_toTopOf="@+id/habit1CardBg" />

    <!-- Habit 2 Card -->
    <View
        android:id="@+id/habit2CardBg"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/habit_card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/habit1CardBg" />

    <CheckBox
        android:id="@+id/cbHabit2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:buttonTint="#4CAF50"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="@+id/habit2CardBg"
        app:layout_constraintStart_toStartOf="@+id/habit2CardBg"
        app:layout_constraintTop_toTopOf="@+id/habit2CardBg" />

    <TextView
        android:id="@+id/habit2Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Tái chế rác thải"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/habit2CardBg"
        app:layout_constraintEnd_toEndOf="@+id/habit2CardBg"
        app:layout_constraintStart_toEndOf="@+id/cbHabit2"
        app:layout_constraintTop_toTopOf="@+id/habit2CardBg" />

    <!-- Habit 3 Card -->
    <View
        android:id="@+id/habit3CardBg"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/habit_card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/habit2CardBg" />

    <CheckBox
        android:id="@+id/cbHabit3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:buttonTint="#4CAF50"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="@+id/habit3CardBg"
        app:layout_constraintStart_toStartOf="@+id/habit3CardBg"
        app:layout_constraintTop_toTopOf="@+id/habit3CardBg" />

    <TextView
        android:id="@+id/habit3Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Dùng túi vải khi đi chợ"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/habit3CardBg"
        app:layout_constraintEnd_toEndOf="@+id/habit3CardBg"
        app:layout_constraintStart_toEndOf="@+id/cbHabit3"
        app:layout_constraintTop_toTopOf="@+id/habit3CardBg" />

    <!-- Green Mission Card -->
    <View
        android:id="@+id/suggestionCardBg"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/suggestion_card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/habit3CardBg" />

    <ImageView
        android:id="@+id/suggestionIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/_024035"
        app:layout_constraintBottom_toBottomOf="@+id/suggestionCardBg"
        app:layout_constraintStart_toStartOf="@+id/suggestionCardBg"
        app:layout_constraintTop_toTopOf="@+id/suggestionCardBg" />

    <TextView
        android:id="@+id/suggestionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Nhiệm vụ xanh"
        android:textColor="#4CAF50"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/suggestionIcon"
        app:layout_constraintTop_toTopOf="@+id/suggestionCardBg" />

    <TextView
        android:id="@+id/suggestionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="Đi bộ thay vì đi xe máy hôm nay?"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/suggestionCardBg"
        app:layout_constraintStart_toEndOf="@+id/suggestionIcon"
        app:layout_constraintTop_toBottomOf="@+id/suggestionTitle" />

    <!-- Bottom Navigation Bar -->
    <View
        android:id="@+id/bottomNavBg"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bottom_nav_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suggestionCardBg" />

    <!-- Bottom Nav Item 1 - Home -->
    <ImageView
        android:id="@+id/navItem1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/_836512"

        app:layout_constraintEnd_toStartOf="@+id/navItem2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/bottomNavBg"
        app:layout_constraintTop_toTopOf="@+id/bottomNavBg" />

    <TextView
        android:id="@+id/navText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Home"
        android:textColor="#4CAF50"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/navItem1"
        app:layout_constraintStart_toStartOf="@+id/navItem1"
        app:layout_constraintTop_toBottomOf="@+id/navItem1" />

    <!-- Bottom Nav Item 2 - Khám phá -->
    <ImageView
        android:id="@+id/navItem2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/_546299"


        app:layout_constraintEnd_toStartOf="@+id/navItem3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/navItem1"
        app:layout_constraintTop_toTopOf="@+id/bottomNavBg" />

    <TextView
        android:id="@+id/navText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Khám phá"
        android:textColor="#666666"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/navItem2"
        app:layout_constraintStart_toStartOf="@+id/navItem2"
        app:layout_constraintTop_toBottomOf="@+id/navItem2" />

    <!-- Bottom Nav Item 3 - Plus -->
    <View
        android:id="@+id/navItem3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/nav_item_center_bg"
        app:layout_constraintBottom_toBottomOf="@+id/bottomNavBg"
        app:layout_constraintEnd_toStartOf="@+id/navItem4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/navItem2"
        app:layout_constraintTop_toTopOf="@+id/bottomNavBg" />

    <TextView
        android:id="@+id/plusIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/navItem3"
        app:layout_constraintEnd_toEndOf="@+id/navItem3"
        app:layout_constraintStart_toStartOf="@+id/navItem3"
        app:layout_constraintTop_toTopOf="@+id/navItem3" />

    <!-- Bottom Nav Item 4 - Cộng đồng -->
    <ImageView
        android:id="@+id/navItem4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/_651541"

        app:layout_constraintEnd_toStartOf="@+id/navItem5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/navItem3"
        app:layout_constraintTop_toTopOf="@+id/bottomNavBg" />

    <TextView
        android:id="@+id/navText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Cộng đồng"
        android:textColor="#666666"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/navItem4"
        app:layout_constraintStart_toStartOf="@+id/navItem4"
        app:layout_constraintTop_toBottomOf="@+id/navItem4" />

    <!-- Bottom Nav Item 5 - Hồ sơ -->
    <ImageView
        android:id="@+id/navItem5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/_564534_customer_man_user_account_profile_icon"

        app:layout_constraintEnd_toEndOf="@+id/bottomNavBg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/navItem4"
        app:layout_constraintTop_toTopOf="@+id/bottomNavBg" />

    <TextView
        android:id="@+id/navText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Hồ sơ"
        android:textColor="#666666"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/navItem5"
        app:layout_constraintStart_toStartOf="@+id/navItem5"
        app:layout_constraintTop_toBottomOf="@+id/navItem5" />

</androidx.constraintlayout.widget.ConstraintLayout>