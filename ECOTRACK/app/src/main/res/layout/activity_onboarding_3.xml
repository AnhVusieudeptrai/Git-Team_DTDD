<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.onboarding.OnboardingScreen3Activity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_logo_ecotrack"
        android:contentDescription="@string/join_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvJoinTitle"
        style="@style/AppText.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_title"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Hình gia đình -->
    <ImageView
        android:id="@+id/ivFamily"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_family_recycling"
        android:contentDescription="@string/connect_subtitle"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/tvJoinTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:0.7"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"/>

    <!-- "Kết nối và truyền cảm hứng" -->
    <TextView
        android:id="@+id/tvConnectTitle"
        style="@style/AppText.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/connect_subtitle"
        app:layout_constraintTop_toBottomOf="@id/ivFamily"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"/>

    <!-- Mô tả -->
    <TextView
        android:id="@+id/tvDescription"
        style="@style/AppText.Subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/share_text"
        app:layout_constraintTop_toBottomOf="@id/tvConnectTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="6dp"/>

    <!-- Button login mạng xã hội -->
    <LinearLayout
        android:id="@+id/llSocialLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnGoogle"
            style="@style/AppButton.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_with_google"
            android:drawableStart="@drawable/ic_google_logo"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnFacebook"
            style="@style/AppButton.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_with_facebook"
            android:drawableStart="@drawable/ic_facebook_logo"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnApple"
            style="@style/AppButton.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_with_apple"
            android:drawableStart="@drawable/ic_apple_logo"
            android:drawablePadding="10dp"/>
    </LinearLayout>

    <!-- Divider với chữ HOẶC -->
    <LinearLayout
        android:id="@+id/llOr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/llSocialLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/colorInputBorder"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            style="@style/AppText.Subtitle"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/colorInputBorder"/>
    </LinearLayout>

    <!-- Email -->
    <EditText
        android:id="@+id/etEmail"
        style="@style/AppInput.EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/llOr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"/>

    <!-- Mật khẩu -->
    <EditText
        android:id="@+id/etPassword"
        style="@style/AppInput.EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"/>

    <!-- Bắt đầu ngay -->
    <Button
        android:id="@+id/btnStartNow"
        style="@style/AppButton.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/start_now"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"/>

    <!-- Link Đăng ký -->
    <TextView
        android:id="@+id/tvRegister"
        style="@style/AppText.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_account"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintTop_toBottomOf="@id/btnStartNow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
