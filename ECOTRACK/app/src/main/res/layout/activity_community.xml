<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/community_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Nội dung chính (có cuộn) -->
    <ScrollView
        android:id="@+id/scrollCommunity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigationView"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/tvCommunityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/community_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="6dp"
                />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvCommunitySubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/community_subtitle"
                android:textSize="13.5sp"
                android:textColor="@color/gray"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:lineSpacingExtra="2dp"/>

            <!-- Ảnh minh họa (M tự đặt file community_people.png vào drawable) -->
            <ImageView
                android:id="@+id/imgCommunityHeader"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="12dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/community_header" />

            <!-- 3 ô hành động (CO2 / Nhựa / Nước) -->

            <!-- Thói quen hôm nay (card lớn) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- item 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="99dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_small"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:contentDescription="@string/ic_co2"
                        android:src="@drawable/ic_cloud" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="CO₂ giảm 5 kg"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- item 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_small"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:contentDescription="@string/ic_plastic"
                        android:src="@drawable/ic_bottle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Nhựa tái chế 2 kg"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- item 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="101dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_small"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:contentDescription="@string/ic_water"
                        android:src="@drawable/ic_drop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="  Nước tiết kiệm 1 L"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginTop="18dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thói quen hôm nay"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <!-- vòng progress / biểu tượng hoàn thành -->
                <ImageView
                    android:id="@+id/imgHabitCircle"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_check_circle"
                    android:contentDescription="@string/habit_completed"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã hoàn thành!"
                    android:textSize="14sp"
                    android:textColor="@color/green"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn đã thực hiện thói quen xanh hôm nay."
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom navigation (nếu m muốn giống app): dùng cùng menu đã có -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu_tracking"
        app:labelVisibilityMode="labeled"
        app:itemHorizontalTranslationEnabled="false"/>
</RelativeLayout>
