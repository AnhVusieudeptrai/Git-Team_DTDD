<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_light">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green_primary"
        app:titleTextColor="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <!-- Add Activity Form -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/green_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thêm Hoạt Động Mới"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="12dp"/>

                    <EditText
                        android:id="@+id/etActivityName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hoạt động"
                        android:padding="12dp"
                        android:background="@drawable/bg_search"
                        android:layout_marginBottom="dp"/>

                    <EditText
                        android:id="@+id/etActivityDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mô tả"
                        android:padding="12dp"
                        android:background="@drawable/bg_search"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etActivityPoints"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Điểm"
                        android:inputType="number"
                        android:padding="12dp"
                        android:background="@drawable/bg_search"
                        android:layout_marginBottom="8dp"/>

                    <Spinner
                        android:id="@+id/spActivityCategory"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="12dp"
                        android:background="@drawable/bg_spinner"
                        android:layout_marginBottom="12dp"/>

                    <Button
                        android:id="@+id/btnAddActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thêm Hoạt Động"
                        android:textColor="@color/green_primary"
                        android:backgroundTint="@color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Activities List -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh Sách Hoạt Động"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/green_primary"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:id="@+id/containerActivities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>