<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Confetti Animation Container -->
    <FrameLayout
        android:id="@+id/confetti_container"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp">

        <!-- Badge Icon Background -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_badge_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/rarity_common"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/text_badge_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="48sp" />

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    <!-- Congratulations Text -->
    <TextView
        android:id="@+id/text_congratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/congratulations"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold" />

    <!-- New Badge Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/new_badge_earned"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant" />

    <!-- Badge Name -->
    <TextView
        android:id="@+id/text_badge_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold" />

    <!-- Badge Description -->
    <TextView
        android:id="@+id/text_badge_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant" />

    <!-- Rarity Badge -->
    <com.google.android.material.chip.Chip
        android:id="@+id/chip_rarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:clickable="false"
        app:chipCornerRadius="16dp" />

    <!-- OK Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/ok" />

</LinearLayout>
