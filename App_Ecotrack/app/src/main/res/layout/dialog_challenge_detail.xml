        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_badge_circle"
        android:backgroundTint="?attr/colorPrimaryContainer">

        <TextView
            android:id="@+id/text_challenge_icon"
