<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:rippleColor="?attr/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Activity Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardBackgroundColor="?attr/colorPrimaryContainer"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/text_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="24sp"
                tools:text="ðŸš´" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Activity Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_activity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textColor="?attr/colorOnSurface"
                tools:text="Äi xe Ä‘áº¡p Ä‘i lÃ m" />

            <TextView
                android:id="@+id/text_activity_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Giao thÃ´ng" />

        </LinearLayout>

        <!-- Points Badge -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:textColor="?attr/colorOnPrimary"
            app:chipBackgroundColor="?attr/colorPrimary"
            app:chipCornerRadius="16dp"
            app:chipMinHeight="32dp"
            tools:text="+20" />

        <!-- Completed Check -->
        <ImageView
            android:id="@+id/icon_completed"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            android:contentDescription="@string/completed"
            app:tint="?attr/colorPrimary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
