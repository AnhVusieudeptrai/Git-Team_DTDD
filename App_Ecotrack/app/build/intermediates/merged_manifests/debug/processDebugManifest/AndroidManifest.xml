<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app_ecotrack"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="36" />

    <permission
        android:name="com.example.app_ecotrack.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.app_ecotrack.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.EcoTrack" >
        <activity
            android:name="com.example.app_ecotrack.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.EcoTrack.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.app_ecotrack.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.app_ecotrack.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.example.app_ecotrack.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.app_ecotrack.AdminActivity"
            android:exported="false" />
        <activity
            android:name="com.example.app_ecotrack.LeaderboardActivity"
            android:exported="false" />
        <activity
            android:name="com.example.app_ecotrack.RewardsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.app_ecotrack.SettingsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.app_ecotrack.AdminManageActivitiesActivity"
            android:exported="false" />
        <activity
            android:name="com.example.app_ecotrack.AdminManageUsersActivity"
            android:exported="false" />
        <activity
            android:name="com.example.app_ecotrack.AdminStatisticsActivity"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.app_ecotrack.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>